<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.nemanja.filipovic.showmovie.Movie"/>

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="518dp"
                android:adjustViewBounds="?android:attr/windowOverscan"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/_1v_b69u3xl__sl1500_"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textview_first"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="180dp"
                android:text="@string/hello_first_fragment"
                android:textAlignment="center" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <TextView
                android:id="@+id/textView_creators"
                android:layout_width="220dp"
                android:layout_height="41dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2_actors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
